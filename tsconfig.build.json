{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noEmit": false,
        "rootDir": "./src",
        "allowImportingTsExtensions": false,
        "module": "ESNext",
        "moduleResolution": "bundler"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.test.ts",
        "node_modules",
        "dist"
    ]
}